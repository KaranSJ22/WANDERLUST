<%- layout("/layouts/boilerplate.ejs") %>
<body>
    <h3><%= listing.title %></h3>
    <div class="card" style="width: 29rem;">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 18rem;">
        <div class="card-body">
          <p class="card-text">
            
            <br>
            <%= listing.description %>
            <br>
            &#x20b9; <%= listing.price.toLocaleString("en-IN") %>
            <br>
            <%= listing.location %>
            <br>
            <%= listing.country %>       
          </p>
        </div>
    </div>
    <button class="add-btn"><a href="/listings/<%= listing.id %>/edit">Edit</a></button>
    <br>
    
    <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="add-btn">Delete</button>
    </form>
    <div class="col-8 offset-3">
      <h4> Leave a Review</h4>
      <form action="">
        <div>
          <label for="">
            
          </label>
        </div>
      </form>
    </div>
</body>
